<%- include('partials/header.ejs') %> 
<%- include('partials/navbar.ejs') %>  
<div class="container home">
  <div class="row">
    <div class="col-md-9 login" id="login">
      
      <form action="/login" method="POST" >
        <h1 id="welcome ">Login to Continue!</h1>
        <div class="row">
          <div class="mb-3 col-md-12 col-lg-12">
            <label for="email">Email address</label>
            <input type="email" name="email" required="required" class="form-control" id="Email" aria-describedby="emailHelp" placeholder="Email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="mb-3 col-md-12 col-lg-12">
            <label for="password">Password</label>
            <input type="password" name="password" required="required" class="form-control" id="Password" placeholder="Password">
          </div>
        </div>
          <div class="col-md-12 ">
            <a href="/profile"><button type="submit" class="btn btn-primary" id="btn">Log In</button></a>
          </div>
          <div class="col-md-12 ">
            <label for="signup">New here? <a href="/Sign-Up"> Create an account</a></label> 
            
          </div>
        
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs') %> 