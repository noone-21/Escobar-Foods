<%- include('partials/headeradmin.ejs') %> 
<%- include('partials/navbaradmin.ejs') %> 
    <div class="container"  >
        <div class="row" id="login">
            <h1 class="h-primary center">Add Items</h1>
            <form action="/admin/add-items" method="POST">
                <div class="row">
                    <div class="mb-3 col-lg-6 ">
                      <label for="foodId">Item ID</label>
                      <input type="text" name="itemId" required="required" class="form-control" id="itemId" placeholder="Item No.">
                    </div>
                    <div class="mb-3 col-lg-6 ">
                        <label for="foodName">Item Name</label>
                        <input type="text" name="itemName" required="required" class="form-control" id="itemName" placeholder="Item Name">
                      </div>
                    <div class="mb-3 col-lg-6 ">
                      <label for="categoryId">Category ID</label>
                      <input type="text" name="categoryId" required="required" class="form-control" id="categoryId" placeholder="FastFood-1,Desi-2,Chinese-3,Grocery-4">
                    </div>
                    <div class="mb-3 col-lg-6 ">
                      <label for="price">Price</label>
                      <input type="text" name="price" required="required" class="form-control" id="price" placeholder="Item Price">
                    </div>
                  </div>
                  <div class="col-md-12 ">
                    <button type="submit" class="btn btn-primary" id="btn">Add</button>
                  </div>
            </form>
            <script>
                var addToCart=document.querySelectorAll('#btn')
                addToCart.forEach((btn)=>{
                    btn.addEventListener('click',(e)=>{
                        alert("New Item Added!")
                    })
                })
            </script>   
        </div>
    </div>
</body>

</html>