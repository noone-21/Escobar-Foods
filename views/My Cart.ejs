<%- include('partials/header.ejs') %> 
<%- include('partials/navbar.ejs') %>  
<div class="container"  >
    <div class="row" id="login">
        <h1 class="h-primary center">My Cart</h1>
        <div class="col-lg-12">
            <div class="row">
              <div class="col-lg-6">
                <a href="/menu/add-to-cart"><button  type="submit"  class="btn btn-primary" id="btn">Add to Cart</button></a>
            </div>
            <div class="col-lg-6">
                <a href="/menu/remove-from-cart"><button  type="submit"  class="btn btn-primary" id="btn">Remove From Cart</button></a> 
            </div>
              <table class="table">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                  <% var bill=0 %> 
                 <% for(let cart of myCart){  %> 
                  <% if(cart.foodCategory=="Fast Food") {%> 
                    <tr> 
                      <% for(let cart1 of fastFood){ %> 
                      <% if(cart.foodName==cart1.foodName){ %> 
                            <td><%= cart1.foodName %> </td>
                            <td><%= cart1.price %> </td>
                            <td><%= cart.foodQuantity %> </td>
                            <% var bill=bill+(parseInt(cart.foodQuantity)*parseInt(cart1.price) )  %> 
                            <% } %> 
                            <% } %> 
                    </tr>
                    <% } %> 
                    <%if(cart.foodCategory=="Desi"){ %> 
                    <tr> 
                      <% for(let cart1 of desi){ %> 
                        <% if(cart.foodName==cart1.foodName){ %> 
                              <td><%= cart1.foodName %> </td>
                              <td><%= cart1.price %> </td>
                              <td><%= cart.foodQuantity %> </td>
                              <% var bill=bill+(parseInt(cart.foodQuantity)*parseInt(cart1.price))   %> 
                              <% } %> 
                              <% } %> 
                    </tr>
                    <% } %> 
                    <%if(cart.foodCategory=="Chinese"){ %> 
                    <tr> 
                      <% for(let cart1 of chinese){ %> 
                        <% if(cart.foodName==cart1.foodName){ %> 
                              <td><%= cart1.foodName %> <% chinese.foodName %>  </td>
                              <td><%= cart1.price %> </td>
                              <td><%= cart.foodQuantity %> </td>
                              <% var bill=bill+(parseInt(cart.foodQuantity)*parseInt(cart1.price))   %> 
                              <% } %> 
                              <% } %> 
                    </tr>
                    <% } %> 
                    <% } %> 
                    <td>Total: Rs.<%= bill %> </td>
                </tbody>
            </table>
            </div>
            <a href="/My-Orders"><button type="submit" class="btn btn-primary" id="btn">Confirm Order</button></a>
        </div>
    </div>
</div>
<%- include('partials/footer.ejs') %> 