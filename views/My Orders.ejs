<%- include('partials/header.ejs') %> 
<%- include('partials/navbar.ejs') %>  
<div class="container" >
    <div class="row" id="login">
        <h1 class="h-primary center" >My Orders</h1>
        <div class="col-lg-12">
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="h-secondary">Name</th>
                            <th class="h-secondary">Order</th>
                            <th class="h-secondary">Bill</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>  
                                <td class="h-secondary"  id="Name"><%= user.firstName+ " "+user.lastName %> </td>
                                <td class="h-secondary"  id="order">
                                    <% var bill=0 %> 
                                    <% for(let cart of myCart){  %> 
                                        <% if(cart.foodCategory=="Fast Food") {%> 
                                            <% for(let cart1 of fastFood){ %> 
                                            <% if(cart.foodName==cart1.foodName){ %> 
                                            <%= cart1.foodName+"("+cart.foodQuantity+")"+"," %>
                                            <% var bill=bill+(parseInt(cart.foodQuantity)*parseInt(cart1.price) )  %> 
                                            <% } %> 
                                            <% } %> 
                                            <% } %> 
                                            <%if(cart.foodCategory=="Desi"){ %> 
                                                <% for(let cart1 of desi){ %> 
                                                    <% if(cart.foodName==cart1.foodName){ %> 
                                                <%= cart1.foodName+"("+cart.foodQuantity+")"+"," %>
                                                <% var bill=bill+(parseInt(cart.foodQuantity)*parseInt(cart1.price))   %> 
                                            <% } %> 
                                            <% } %> 
                                            <% } %> 
                                            <%if(cart.foodCategory=="Chinese"){ %> 
                                                <% for(let cart1 of chinese){ %> 
                                                    <% if(cart.foodName==cart1.foodName){ %> 
                                                <%= cart1.foodName+"("+cart.foodQuantity+")"+"," %> 
                                                <% var bill=bill+(parseInt(cart.foodQuantity)*parseInt(cart1.price))   %> 
                                            <% } %> 
                                            <% } %> 
                                            <% } %> 
                                    <% } %> 
                                </td>                
                                <td class="h-secondary"  id="bill">Rs.<%= bill %>  </td>                
                        </tr>               
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer.ejs') %> 