<%- include('partials/header.ejs') %> 
<%- include('partials/navbar.ejs') %>    
<div class="container home"  >
    <div class="row" id="login">
        <h1 class="h-primary center">Add To Cart</h1>
        <div class="col-lg-12">
            <div class="row">
               <form action="/menu/add-to-cart" method="POST">
                <div class="row">
                    <div class="mb-3 col-lg-4 ">
                      <label for="itemName">Item Name</label>
                      <input type="text" name="foodName" required="required" class="form-control" id="itemName" placeholder="Enter the Item You want to Add">
                    </div>
                    <div class="mb-3 col-lg-4 ">
                        <label for="category">Category</label>
                        <input type="text" name="categoryId" required="required" class="form-control" id="category" placeholder="fastFood-1,Desi-2,Chinese-3">
                      </div>
                    <div class="mb-3 col-lg-4 ">
                      <label for="quantity">Quantity</label>
                      <input type="text" name="foodQuantity" required="required" class="form-control" id="quantity" placeholder="Enter the Quantity">
                    </div>
                  </div>
                  <div class="col-md-12 ">
                    <button type="submit" class="btn btn-primary" id="btn">Add</button>
                  </div>
            </form>
            <script>
                var addToCart=document.querySelectorAll('#btn')
                addToCart.forEach((btn)=>{
                    btn.addEventListener('click',(e)=>{
                        alert("Item added to Cart!")
                    })
                })
            </script>   
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer.ejs') %> 