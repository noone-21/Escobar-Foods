<%- include('partials/header.ejs') %> 
<%- include('partials/navbar.ejs') %>  
<div class="container home">
	<div class="row">
	  <div class="col-lg-12 login" id="login">
		<form action="/profile/edit" method="POST">
			<div class="row mb-3">
				<div class="col-sm-3">
					<h6 class="mb-0">First Name</h6>
				</div>
				<div class="col-sm-9 text-secondary">
					<input type="text" name="fName" class="form-control" value="<%= user.firstName %> ">
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-sm-3">
					<h6 class="mb-0">Last Name</h6>
				</div>
				<div class="col-sm-9 text-secondary">
					<input type="text" name="lName" class="form-control" value="<%= user.lastName %> ">
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-sm-3">
					<h6 class="mb-0">Email</h6>
				</div>
				<div class="col-sm-9 text-secondary">
					<input disabled type="text" name="mail" class="form-control" value="<%= user.email %> ">
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-sm-3">
					<h6 class="mb-0">Password</h6>
				</div>
				<div class="col-sm-9 text-secondary">
					<input type="password" name="pass" class="form-control"  id="pass">
					<h6> <input type="checkbox" onclick="myFunction()"> Show Password</h6>
				</div>
				<script>
					function myFunction() {
					  var x = document.getElementById("pass");
					  if (x.type === "password") {
						x.type = "text";
					  } else {
						x.type = "password";
					  }
					}
					</script>
			<div class="row mb-3">
				<div class="col-sm-3">
					<h6 class="mb-0">Phone No</h6>
				</div>
				<div class="col-sm-9 text-secondary">
					<input type="text" name="pNo" class="form-control" value="<%= user.phoneNo %> ">
				</div>
			</div>
			<div class="row mb-3">
				<div class="col-sm-3">
					<h6 class="mb-0">Address</h6>
				</div>
				<div class="col-sm-9 text-secondary">
					<input type="text" name="add" class="form-control" value="<%= user.address %> ">
				</div>
			</div>
			<div class="row">
				<div class="col-sm-3"></div>
				<div class="col-sm-9 text-secondary">
					<button type="submit" class="btn btn-primary" id="btn">Save Changes</button>
				</div>
			</div>
		</form>
	  </div>
	</div>
  </div>
  <%- include('partials/footer.ejs') %> 