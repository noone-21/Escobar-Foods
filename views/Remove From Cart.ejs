<%- include('partials/header.ejs') %> 
<%- include('partials/navbar.ejs') %>    
<div class="container home"  >
    <div class="row" id="login">
        <h1 class="h-primary center">Remove From Cart</h1>
        <div class="col-lg-12">
            <div class="row">
               <form action="/menu/remove-from-cart" method="POST">
                <div class="row">
                    <div class="mb-3 col-lg-6 ">
                      <label for="itemName">Item Name</label>
                      <input type="text" name="foodName" required="required" class="form-control" id="itemName" placeholder="Enter the Item You want to Remove">
                    </div>
                    <div class="mb-3 col-lg-6 ">
                        <label for="category">Category</label>
                        <input type="text" name="foodCategory" required="required" class="form-control" id="category" placeholder="Enter the Food Category">
                      </div>
                  </div>
                  <div class="col-md-12 ">
                    <button type="submit" class="btn btn-primary" id="btn">Remove</button>
                  </div>
            </form>
            <script>
                var addToCart=document.querySelectorAll('#btn')
                addToCart.forEach((btn)=>{
                    btn.addEventListener('click',(e)=>{
                        alert("Item removed from Cart!")
                    })
                })
            </script>   
            </div>
        </div>
    </div>
</div>
